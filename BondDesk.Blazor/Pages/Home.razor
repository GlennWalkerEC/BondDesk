@page "/"

@using System.Net.Http.Json
@inject HttpClient Http

<h3>Gilts (UK Government Bonds)</h3>

@if (gilts == null)
{
    <p>Loading...</p>
}
else if (!gilts.Any())
{
    <p>No gilts found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Epic</th>
                <th>Coupon (%)</th>
                <th>Maturity</th>
                <th>Face Value</th>
                <th>Tenor</th>
                <th>Days Since Last Coupon</th>
                <th>Last Price</th>
                <th>Dirty Price</th>
                <th>Running Yield</th>
                <th>Yield To Maturity</th>
                <th>Macaulay Duration</th>
                <th>Accrued Days</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bond in gilts)
            {
                <tr>
                    <td>@bond.Name</td>
                    <td>@bond.Epic</td>
                    <td>@((bond.Coupon * 100).ToString("F4"))</td>
                    <td>@bond.Maturity.ToString("yyyy-MM-dd")</td>
                    <td>@bond.FaceValue.ToString("F4")</td>
                    <td>@bond.Tenor.ToString("F4")</td>
                    <td>@bond.DaysSinceLastCoupon.ToString("F4")</td>
                    <td>@bond.LastPrice.ToString("F4")</td>
                    <td>@bond.DirtyPrice.ToString("F4")</td>
                    <td>@bond.RunningYield.ToString("F4")</td>
                    <td>@bond.YieldToMaturity.ToString("F4")</td>
                    <td>@bond.MacaulayDuration.ToString("F4")</td>
                    <td>@bond.AccruedDays.ToString("F4")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<BondDTO>? gilts;

    protected override async Task OnInitializedAsync()
    {
        // Set a longer timeout (e.g., 2 minutes)
        Http.Timeout = TimeSpan.FromMinutes(2);

        gilts = await Http.GetFromJsonAsync<List<BondDTO>>("http://localhost:5296/api/Bond");
    }
}
